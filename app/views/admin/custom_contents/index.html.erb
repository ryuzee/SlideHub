
<section class="content-header d-flex">
  <div>
    <h1><%= t(:custom_contents) %></h1>
  </div>
  <div class="ml-auto">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item ml-auto"><a href="<%= admin_dashboard_path %>"><i class="fa fa-dashboard"></i> <%= t(:admin_dashboard) %></a></li>
        <li class="breadcrumb-item active"><%= link_to t(:custom_contents), admin_custom_contents_path %></li>
      </ol>
    </nav>
  </div>
</section>

<section class="content">
<%= render :partial => 'shared/flash', :locals => { :flash => flash } %>
<%= form_tag update_admin_custom_contents_path, method: :post, class: 'form-horizontal slide' do %>
  <div class="card card-warning card-outline">
    <div class="card-body p-0">
    <!-- Table -->
    <table class="table table-striped small">
      <thead>
        <tr>
          <th class="col-md-2"><%= t(:key) %></th>
          <th class="col-md-10"><%= t(:value) %></th>
        </tr>
      </thead>
      <tbody>
        <% index = 0 %>
        <% @settings.each do |s| %>
          <%= fields_for('settings[]', s, index: nil) do |fh| %>
            <tr>
              <td><%= t(s.var) %><%= fh.hidden_field :var %></td>
              <td><%= generate_form_field(s, fh) %></td>
            </tr>
            <% index += 1 %>
          <% end %>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>

  <%= submit_tag t(:save_settings), class: 'btn btn-primary' %>
<% end %>
</section>
