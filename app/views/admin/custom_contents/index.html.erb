<section class="content-header">
<h1><%= t(:custom_contents) %>&nbsp;&nbsp;<small><%= link_to t(:back_to_dashboard), admin_dashboard_path %></small></h1>
</section>

<section class="content">
<%= bootstrap_flash %>
<%= form_tag update_admin_custom_contents_path, method: :post, class: 'form-horizontal slide' do %>
  <div class="box box-warning">

    <!-- Table -->
    <table class="table table-striped table-bordered small">
      <thead>
        <tr>
          <th class="col-md-4"><%= t(:key) %></th>
          <th class="col-md-8"><%= t(:value) %></th>
        </tr>
      </thead>
      <tbody>
        <% index = 0 %>
        <% @settings.each do |s| %>
          <%= fields_for('settings[]', s, index: nil) do |fh| %>
            <tr>
              <td><%= t(s.var) %><%= fh.hidden_field :var %></td>
              <td><%= generate_form_field(s, fh) %></td>
            </tr>
            <% index += 1 %>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= submit_tag t(:save_settings), class: 'btn btn-primary' %>
<% end %>
</section>
