<h3><%= t(:user_list) %>&nbsp;&nbsp;<small><%= link_to t(:back_to_dashboard), admin_dashboards_path %></small></h3>

<div class="panel panel-default">
  <!-- Table -->
  <table class="table table-striped table-bordered small">
    <thead>
      <tr>
        <th class="col-md-1"><%= sort_link(@search, :id) %></th>
        <th class="col-md-2"><%= sort_link(@search, :email) %></th>
        <th class="col-md-2"><%= sort_link(@search, :username) %></th>
        <th class="col-md-2"><%= sort_link(@search, :display_name) %></th>
        <th class="col-md-1"><%= sort_link(@search, :provider) %></th>
        <th class="col-md-1"><%= sort_link(@search, :admin) %></th>
        <th class="col-md-1"><%= sort_link(@search, :slides_count) %></th>
        <th class="col-md-1"><%= sort_link(@search, :created_at) %></th>
        <th class="col-md-1"><%= sort_link(@search, :updated_at) %></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.id, edit_admin_user_path(user.id) %> &nbsp;</td>
          <td><%= user.email %></td>
          <td><%= user.username %></td>
          <td><%= user.display_name %></td>
          <td><%= user.provider %></td>
          <td><%= user.admin %></td>
          <td><%= user.slides_count %></td>
          <td><%= user.created_at %></td>
          <td><%= user.updated_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div>
  <%= will_paginate @users, :renderer => BootstrapPagination::Rails %>
</div>
