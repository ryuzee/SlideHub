<section class="content-header">
<h1><%= t(:edit_category) %><small></small></h1>
<ol class="breadcrumb">
  <li><a href="<%= admin_dashboard_path %>"><i class="fa fa-dashboard"></i> <%= t(:admin_dashboard) %></a></li>
  <li class="active"><%= link_to t('activerecord.models.category'), admin_categories_path %></li>
</ol>
</section>

<section class="content">

<%= bootstrap_flash %>

<%= form_for @category, :html => { :class => "form-horizontal category" }, :url => admin_category_path(@category.id) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t('error_save_category', errors: @category.errors.count) %></h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @category.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field "_id", :value => @category[:id], :disabled => "disabled", :class => 'form-control' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :name_en, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name_en, :class => 'form-control' %>
    </div>
    <%= f.error_span(:name_en) %>
  </div>

  <div class="control-group">
    <%= f.label :name_ja, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name_ja, :class => 'form-control' %>
    </div>
    <%= f.error_span(:name_ja) %>
  </div>

  <br clear="all" />

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t("helpers.links.cancel"), admin_categories_path, :class => 'btn btn-default' %>
  <%= link_to t(:delete_category), admin_category_path(@category[:id]), :method => 'delete', :class => 'btn btn-danger pull-right', data: {:confirm => t(:confirm_to_delete_category)} %>

<% end %>

</section>
