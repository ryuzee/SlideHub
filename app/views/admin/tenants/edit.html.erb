<section class="content-header d-flex">
  <div>
    <h1><%= t(:tenant) %></h1>
  </div>
  <div class="ml-auto">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item ml-auto"><a href="<%= admin_dashboard_path %>"><i class="fa fa-dashboard"></i> <%= t(:admin_dashboard) %></a></li>
        <li class="breadcrumb-item active"><%= link_to t(:tenant), admin_tenants_path %></li>
      </ol>
    </nav>
  </div>
</section>

<section class="content">
<%= render :partial => 'shared/flash', :locals => { :flash => flash } %>

<%= form_for @tenant, :html => { :class => "form-horizontal tenant" }, :url => admin_tenant_path(@tenant.id) do |f| %>

    <% if @tenant.errors.any? %>
    <div id="error_expl" class="card card-danger">
      <div class="card-heading">
        <h3 class="card-title"><%= t('error_save_tenant', errors: @tenant.errors.count) %></h3>
      </div>
      <div class="card-body">
        <ul>
        <% @tenant.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">

    <%= f.label t(:path), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>

    <%= errors(@tenant, :tenant_id) %>
  </div>

  <br clear="all" />
  <%= f.submit t('update'), :class => 'btn btn-primary' %>

<% end %>

</section>
