<h3><%= t(:slide_list) %>&nbsp;&nbsp;<small><%= link_to t(:back_to_dashboard), admin_dashboards_path %></small></h3>

<div class="panel panel-default">
  <!-- Table -->
  <table class="table table-striped table-bordered small">
    <thead>
      <tr>
        <th class="col-md-1"><%= sort_link(@search, :id) %></th>
        <th class="col-md-1"><%= sort_link(@search, :name) %></th>
        <th class="col-md-1"><%= sort_link(@search, :user_id) %></th>
        <th class="col-md-1"><%= sort_link(@search, :created_at) %></th>
        <th class="col-md-1"><%= sort_link(@search, :modified_at) %></th>
        <th class="col-md-1"><%= sort_link(@search, :convert_status) %></th>
        <th class="col-md-1"><%= sort_link(@search, :total_view) %></th>
        <th class="col-md-1"><%= sort_link(@search, :page_view) %></th>
        <th class="col-md-1"><%= sort_link(@search, :embedded_view) %></th>
        <th class="col-md-1"><%= sort_link(@search, :download_count) %></th>
        <th class="col-md-1"><%= sort_link(@search, :comments_count) %></th>
        <th class="col-md-1"><%= t('command') %></th>
      </tr>
    </thead>
    <tbody>
      <% @slides.each do |slide| %>
        <tr>
          <td><%= link_to slide.id, slide_path(slide.id) %></td>
          <td><%= link_to slide.name, slide_path(slide.id) %>&nbsp;</td>
          <td><%= link_to slide.user_id, "/#{slide.user_id}" %>&nbsp;</td>
          <td><%= slide.created_at %></td>
          <td><%= slide.modified_at %></td>
          <td><%= slide.convert_status %></td>
          <td><%= slide.total_view %></td>
          <td><%= slide.page_view %></td>
          <td><%= slide.embedded_view %></td>
          <td><%= slide.download_count %></td>
          <td><%= slide.comments_count %></td>
          <td><a href="<%= slide.transcript_url %>" target="_blank"><i class="fa fa-file-text"></i></a>&nbsp;<a href="<%= slide.page_list_url %>" target="_blank"><i class="fa fa-jsfiddle"></i></a>&nbsp;<a href="<%= admin_download_slide_path(slide.id) %>"><i class="fa fa-cloud-download"></i></a>&nbsp;<a href="<%= edit_admin_slide_path(slide.id) %>"><i class="fa fa-pencil"></i></a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div>
  <%= will_paginate @slides, :renderer => BootstrapPagination::Rails %>
</div>
