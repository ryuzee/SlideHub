<%
def conv(str)
  str.gsub!(/(\r\n|\r|\n)/,"")
  str.gsub!(/\\/,"\\\\")
  str.gsub!(/"/,"\\\\\"")
  str.gsub!(/\s+/," ")
  str.strip!
  return "" if str == ""
  "w(\"#{str}\");"
end
script = "function w(s){document.write(s+'\\n');}\n\n"
str = "#{@body}\n\n<script type=\"text/javascript\">#{@script}</script>"
str.each_line do |s|
  script = script.concat(conv(s)) + "\n"
end
%>
<% require 'uglifier' %>
<%= raw Uglifier.compile(script) %>
