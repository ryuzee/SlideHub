<%= form_for comment, :html => { :class => "form-horizontal user" } do |f| %>

  <% if comment.errors.any? %>
    <div id="error_expl" class="card card-danger">
      <div class="card-heading">
        <h3 class="card-title"><%= pluralize(comment.errors.count, "error") %> prohibited this user from being saved:</h3>
      </div>
      <div class="card-body">
        <ul>
          <% comment.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <div class="controls">
      <%= f.text_field :comment, :class => 'form-control' %>
      <%= errors(comment, :comment) %>
    </div>
  </div>
  <%= f.hidden_field :slide_id, :value => comment.slide_id %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.submit nil, :class => 'btn btn-primary', :style => 'margin-top:10px;' %>
<% end %>
