<% if slide.transcript.try(:exist?) %>
  <% page_count = 0 %>
  <div class="slide_description">
    <% slide.transcript.lines.each do |tran| %>
      <% tran = clear_invisible_string(tran) %>
      <% page_count += 1 %>
      <% if not tran.blank? %>
        <% if params[:vertical] != "1" %>
          <div style="font-size:0.8em; margin-bottom:0.4em;"><a href="#page_top" onclick="javascript:OSSJSPARTS<%= prefix %>.moveTo(<%= page_count - 1 %>);"><%= page_count %>.</a> <%= tran %></div>
        <% else %>
          <div style="font-size:0.8em;"><a href="#img-<%= page_count - 1 %>"><%= page_count %>.</a> <%= tran %></div>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% else %>
  <div class="slide_description"><div style="font-size:0.9em;">No Transcript...</div></div>
<% end %>
